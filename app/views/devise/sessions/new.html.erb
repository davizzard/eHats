<div class="thumbnail login-box">
	<div class="container login-box">
		<h3>Iniciar Sesión</h3>
		<hr>
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <% if !session[:message].blank? %>
            <div class="alert alert-info">
              <span> <%=session[:message] %></span> <span class="glyphicon glyphicon-info-sign"> </span>
            </div>
        <% end %>
		  <br/>

		  <div>
		    <span class="">Dirección de e-mail</span><br />
		    <%= f.email_field :email, autofocus: true, class: "form-control"%>
		  </div>
		  <br />

		  <div>
		    <span class="">Contraseña</span><br />
		    <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
		  </div>
		  <br />

		  <% if devise_mapping.rememberable? -%>
		    <div class="field">
		      <%= f.check_box :remember_me %>
		      <span class="">Recuérdame</span>
		    </div>
		  <% end -%>
		  <br />

		  <div>
		    <%= f.submit "Inciar sesión", class: "center-block btn btn-primary btn-block" %>
		  </div>
		<% end %>
		<br />
		<div> 
		  <%= render "devise/shared/links" %>
		</div>
		<hr>
    <% session[:message] = "" %>
	</div>
</div>
