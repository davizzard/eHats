<div class="thumbnail edit-box">
	<div class="container edit-box">
		<h3>Editar usuario</h3>
		<hr>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
		  <%= devise_error_messages! %>
		  <br/>

		  <div>
		    <span class="">Dirección de e-mail</span><br />
		    <%= f.email_field :email, autofocus: true, class: "form-control"%>
		  </div>
		  <br />
		  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
		    <div>Esperando confirmación para: <%= resource.unconfirmed_email %></div><br />
		  <% end %>
		
		  <div>
		    <span class="">Nueva contraseña</span> <i>(dejar campo en blanco si no se desea cambiar)</i><br />
		    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
		    <% if @minimum_password_length %>
		      <i>(mínimo <%= @minimum_password_length %> caracteres)</i>
		    <% end %>
		  </div>
		  <br />

		  <div>
		    <span class="">Confirmar nueva contraseña</span><br />
		    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
		  </div>
		  <hr>
			
		  <div>
		    <span class="">Contraseña actual</span><br />
		    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
		  </div>
		  <br />

		  <div>
		    <%= f.submit "Guardar cambios", class: "center-block btn btn-primary btn-block" %>
		  </div>
		<% end %>
		<br />

		<h3>Cancelar mi cuenta</h3><br />

		<p>¿No está contento? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Está seguro?" }, method: :delete, class: "center-block btn btn-default btn-block" %></p>
		<br />
		<%= link_to "Volver", root_path %>
		<hr>
	</div>
</div>
