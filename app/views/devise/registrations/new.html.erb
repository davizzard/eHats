<div class="thumbnail login-box">
	<div class="container login-box">
		<h3>Crear cuenta</h3>
		<hr>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>
		  <div>
		    <span class="">Dirección de e-mail</span><br />
		    <%= f.email_field :email, autofocus: true, class: "form-control"%><br />
		  </div>

		  <div>
		    <span class="">Contraseña</span>
		    <% if @minimum_password_length %>
		    <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
		    <% end %><br />
		    <%= f.password_field :password, autocomplete: "off", class: "form-control" %><br />
		  </div>

		  <div>
		    <span class="">Confirmación de contraseña</span><br />
		    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %><br />
		  </div>

		  <div>
		    <%= f.submit "Crea tu cuenta de eHats", class: "center-block btn btn-primary btn-block" %>
		  </div>
		<% end %>
		<br />
		<div>
		  <%= render "devise/shared/links" %>
		</div>
		<hr>
	</div>
</div>

